<header id="header">
  <a href="/"><img id="logo" src="/logo-blue-black.svg"></a>
  <span id="version"><%= Rails.application.config.calculist_version %></span>
  <div class="header-right">
    <% if current_user %>
      <span id="username"><a href="/<%= current_user.username %>"><%= current_user.username %></a></span>&nbsp;|&nbsp;<span id="sign-out">sign out</span>
    <% else %>
      <span><a href="<%= new_registration_path(:user) %>">sign up</a></span>&nbsp;|&nbsp;<span><a href="<%= new_session_path(:user) %>">sign in</a></span>
    <% end %>
  </div>
</header>

<div class="page main-page">
  <ul id="top-level"></ul>
</div>

<input type="file" style="display:none;">

<script>
  var LIST_TITLE = "Calculist",
      LIST_DATA = {},
      LIST_ID = 0,
      INITIAL_LAST_SAVE = 0,
      USER_PREFERENCES = <%= raw(current_user ? current_user.preferences.content.to_json : UserPreferencesManager::DEFAULT_PREFERENCES.to_json) %>,
      WORKER_FILE_PATH = '<%= asset_path('worker.js') %>',
      READ_ONLY = false,
      OTHER_LISTS = [];
</script>

<%= javascript_include_tag "application" %>
